<nav>
  <div class="logo">
    <a href="/">
      <img src="/img/logopt2.png" alt="Logo" />
    </a>
  </div>
  <div>
    <ul class="menu">
      <li><a href="about">ABOUT</a></li>
      <li><a href="tickets">TICKETS</a></li>
      <li><a href="program">PROGRAM</a></li>
      <li><a href="contact">CONTACT</a></li>
      <li><a href="volunteer">VOLUNTEER</a></li>
      <li><a href="galleri">GALLERY</a></li>
    </ul>
    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </div>
</nav>
<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .logo img {
    width: 100px;
    margin: 10px;
  }

  .menu.active {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgba(92, 29, 169, 0.85);

    position: absolute; /* Eller 'fixed' afhængigt af dit design */
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 10;
  }
  .burger.active .line:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
    z-index: 20;
  }

  .burger.active .line:nth-child(2) {
    opacity: 0;
    z-index: 20;
  }

  .burger.active .line:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
    z-index: 20;
  }

  ul {
    list-style-type: none;
    padding: 0;
    display: none; /* Skjul menuen som standard, vil blive vist på desktop */
    gap: 20px;
    align-items: center;
    margin: 0;
  }

  ul a {
    text-decoration: none;
    color: #f3eef9; /* Dit valgte link-farve */
    font-size: 1rem;
    font-family: Arial, Helvetica, sans-serif;
  }

  .burger {
    display: flex; /* Vis burgermenuen som standard */
    width: 30px;
    height: 20px;
    cursor: pointer;
    flex-direction: column;
    justify-content: space-between;
    margin-right: 2rem; /* Justering fra dit oprindelige design */
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: #f3eef9; /* Dit valgte farve for burgermenuen */
    transition: all 0.2s linear;
  }

  /* Menuen vises i desktop format, og burger-menuen skjules */
  @media screen and (min-width: 768px) {
    .menu {
      display: flex; /* Viser menuen i en horisontal linje */
      gap: 30px; /* Afstand mellem menu-punkter */
      align-items: center;
      justify-content: flex-end; /* Placerer menuen i højre side */
      text-transform: uppercase;
      font-size: 0.8rem; /* Fra dit oprindelige design */
    }

    .burger {
      display: none; /* Skjuler burger-menuen på desktop */
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const burger = document.querySelector(".burger");
    const menu = document.querySelector(".menu");
    const links = document.querySelectorAll("nav .menu a");

    burger.addEventListener("click", () => {
      burger.classList.toggle("active");
      menu.classList.toggle("active");
    });

    links.forEach((link) => {
      link.addEventListener("click", () => {
        burger.classList.remove("active");
        menu.classList.remove("active");
      });
    });
  });
</script>
