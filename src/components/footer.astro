    text-align: right;
  }

  .newsletter h2,
  .kontakt_info h2 {
    font-size: 20px;
    margin-bottom: 10px;
  }

  .newsletter div,
  .kontakt_info div {
    margin-bottom: 10px;
  }
  .newsletter button {
    color: #333;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    margin-left: 10px;
    cursor: pointer;
  }

  .social-icons a {
