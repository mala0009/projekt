<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<footer>
  <div class="footer-container">
    <div class="left">
      <div class="newsletter">
        <div class="newsletter_overskrift">Newsletter</div>
        <div class="newsletter_text">Sign up to the newsletter and be the first to know about music announcement, events and much more.</div>
        <form action="join">
          <button type="submit">JOIN</button>
        </form>
      </div>
    </div>

    <div class="right">
      <div class="kontakt_info">
        <div>Contact: info@nusnus.dk</div>
        <div>Karrusel, Copenhagen, Refshaleøen</div>
      </div>
    </div>
    <div class="social-icons">
      <a href="#" target="_blank"><i class="fab fa-facebook"></i></a>
      <a href="#" target="_blank"><i class="fab fa-instagram"></i></a>
      <a href="#" target="_blank"><i class="fab fa-spotify"></i></a>
    </div>
  </div>
</footer>
<style>
  footer {
    color: #fff;
    padding: 20px;
    font-family: Arial, Helvetica, sans-serif;
  }

  .kontakt_info {
    display: none;
  }
  .footer-container {
    display: flex;
    flex-direction: row; /* Gør at børnene (venstre og højre sektion) står under hinanden */
    justify-content: space-between;
  }

  .newsletter_text {
    max-width: 300px;
    text-align: left;
    letter-spacing: 0.2cap;
    margin: 10px;
  }

  .newsletter_overskrift {
    max-width: 300px;
    text-align: left;
    font-weight: bolder;
    margin-left: 10px;
  }

  .kontakt_info {
    text-align: left;
    padding-top: 2rem;
    font-size: 10px;
  }

  .social-icons {
    text-align: right;
    display: flex; /* Aktiverer Flexbox */
    justify-content: flex-end; /* Justerer børnelementerne (ikonerne) til højre */
    align-items: center;
    margin-top: auto;
    margin-bottom: 5px;
  }

  .newsletter div,
  .kontakt_info div {
    margin-bottom: 10px;
  }

  .newsletter button:hover {
    background-color: #0f0; /* Grøn baggrundsfarve ved hover */
    color: black;
  }
  button {
    background-color: transparent; /* Gennemsigtig baggrundsfarve */
    color: #0f0; /* Grøn tekstfarve */
    border: 2px solid #0f0; /* Grøn streg */
    padding: 7px 30%;
    border-radius: 4px;
    cursor: pointer;
    margin-left: 9px;
  }

  .social-icons a {
    text-decoration: none;
    margin-right: 10px;
    color: #0f0;
  }

  .social-icons {
    margin-top: auto; /* Placerer logoerne nederst på siden */
  }

  .newsletter_overskrift {
    font-weight: bold;
    text-align: left;
    width: 100%; /* Sikrer, at stilen gælder på hele linjens bredde */
  }

  .social-icons i {
    font-size: 24px; /* Ændrer størrelsen på de sociale medier ikoner */
  }

  @media screen and (max-width: 767px) {
  }
</style>
