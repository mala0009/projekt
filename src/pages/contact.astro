---
import "../styles/style.css";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1>CONTACT</h1>

  <div class="contact-info">
    <p><strong>Email:</strong> info@nusnus.dk</p>
    <p><strong>Organized by:</strong> Nus Nus</p>
    <p>
      <strong>Follow us:</strong>
      <a href="#">Instagram</a>,
      <a href="#">Facebook</a>,
      <a href="#">FB event</a>,
      <a href="#">Resident Advisor event</a>
    </p>
  </div>

  <div class="graphic">
    <img src="../img/swirl.svg" alt="swirl" />
  </div>
</Layout>

<style>
  h1 {
    text-align: center;
    font-size: 5rem;
    margin-bottom: 2rem;
  }

  .contact-info {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-info p {
    margin: 1rem 0;
    font-size: 1.2rem;
  }

  .contact-info strong {
    font-weight: bold;
  }

  .contact-info a {
    color: #007bff;
    text-decoration: none;
    transition: color 0.3s;
  }

  .contact-info a:hover {
    color: #0056b3;
  }

  .graphic {
    display: flex;
    justify-content: center;
  }

  .graphic img {
    opacity: 0.2;
    transform: rotate(110deg);
    width: 100%;
  }
</style>
